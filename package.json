{
  "name": "react-jalali-events-calendar",
  "version": "1.0.6",
  "description": "Modern Persian (Jalali/Shamsi) calendar component for React and Next.js with events, holidays and RTL support",
  "keywords": [
    "react",
    "react calendar",
    "jalali",
    "jalali calendar",
    "persian calendar",
    "shamsi calendar",
    "react jalali calendar",
    "nextjs calendar",
    "calendar with events",
    "rtl calendar",
    "iranian calendar"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alireza-darabi/react-persian-calendar.git"
  },
  "bugs": {
    "url": "https://github.com/alireza-darabi/react-persian-calendar/issues"
  },
  "homepage": "https://github.com/alireza-darabi/react-persian-calendar#readme",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17",
    "tailwindcss": ">=3.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  }
}
