{
  "name": "react-persian-calendar",
  "version": "1.0.1",
  "description": "Persian (Jalali) calendar for React",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17",
    "tailwindcss": ">=3.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  }
}
